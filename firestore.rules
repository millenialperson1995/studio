/**
 * @file This Firestore Security Rules file enforces a role-based and ownership-based model for the Retífica Ágil application.
 *
 * Core Philosophy:
 *   - Administrators ('admin') have broad read access for management purposes.
 *   - Other users ('recepcionista', 'mecanico') operate under a stricter ownership model.
 *   - Public listing of all users is disallowed to non-admins.
 *
 * Key Security Decisions:
 *   - Admins can read the '/users' collection to manage user accounts.
 *   - Regular users can only read their own user document.
 *   - All authenticated users can read from shared data pools like '/clientes', '/pecas', '/servicos', etc., but write access might be more granular if needed in the future.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    /**
     * @description Checks if the signed-in user has the 'admin' role.
     * It safely gets the user's role from their document in the /users collection.
     */
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /users/{userId} {
       // Admins can list all users for the management page.
      allow list: if isAdmin();
      // Any signed-in user can read their own profile, but not others. Writes are restricted to admins.
      allow get, update: if isOwner(userId) || isAdmin();
      allow create, delete: if isAdmin();
    }

    match /clientes/{clienteId} {
      allow read, write: if isSignedIn();
    }

    match /clientes/{clienteId}/veiculos/{veiculoId} {
      allow read, write: if isSignedIn();
    }
    
    match /orcamentos/{orcamentoId} {
      allow read, write: if isSignedIn();
    }
    
    match /clientes/{clienteId}/ordensServico/{ordemServicoId} {
        allow read, write: if isSignedIn();
    }

    // This rule is required to allow collection group queries on 'veiculos'
    match /{path=**}/veiculos/{veiculoId} {
      allow list: if isSignedIn();
    }
    
    // This rule is required to allow collection group queries on 'ordensServico'
    match /{path=**}/ordensServico/{ordemServicoId} {
      allow list: if isSignedIn();
    }

    match /clientes/{clienteId}/orcamentos/{orcamentoId} {
      allow get: if isOwner(clienteId);
      allow list: if isOwner(clienteId);
      allow create: if isOwner(clienteId);
      allow update: if isOwner(clienteId);
      allow delete: if isOwner(clienteId);
    }

    match /pecas/{pecaId} {
      allow read, write: if isSignedIn();
    }

    match /servicos/{servicoId} {
      allow read, write: if isSignedIn();
    }
  }
}
