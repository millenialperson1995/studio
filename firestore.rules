rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data in any top-level collection
    match /{collection}/{docId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }

    // Special rule for 'veiculos' as a subcollection
    match /clientes/{clienteId}/veiculos/{veiculoId} {
        allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
  }
}
